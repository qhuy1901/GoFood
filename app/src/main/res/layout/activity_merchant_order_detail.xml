    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_merchant_order_detail_rcvOrder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_merchant_order_detail_constraintLayout2"
        app:layout_constraintTop_toBottomOf="@+id/activity_merchant_order_detail_view1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_merchant_order_detail_constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/activity_merchant_order_detail_tv_count_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/be_vietnam_semibold"
            android:text="10 Món"
            android:textColor="#333333"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toTopOf="@+id/activity_merchant_order_detail_activity_update_product_btn_delete_product"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/activity_merchant_order_detail_imageView4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/wallet"
            app:layout_constraintBottom_toTopOf="@+id/activity_merchant_order_detail_activity_update_product_btn_save"
            app:layout_constraintEnd_toStartOf="@+id/activity_merchant_order_detail_tv_total" />

        <TextView
            android:id="@+id/activity_merchant_order_detail_tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/be_vietnam_semibold"
            android:text="857,858 đ"
            android:textColor="#F2789F"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/activity_merchant_order_detail_activity_update_product_btn_save"
            app:layout_constraintEnd_toEndOf="parent" />

        <android.widget.Button
            android:id="@+id/activity_merchant_order_detail_activity_update_product_btn_save"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn2_bg"
            android:fontFamily="@font/be_vietnam_semibold"
            android:text="Xác nhận"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <android.widget.Button
            android:id="@+id/activity_merchant_order_detail_activity_update_product_btn_delete_product"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@drawable/btn1_bg"
            android:fontFamily="@font/be_vietnam_bold"
            android:text="Từ chối"
            android:textAllCaps="false"
            android:textColor="#F2789F"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
