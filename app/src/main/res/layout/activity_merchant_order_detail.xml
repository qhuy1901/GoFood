    <TextView
        android:id="@+id/activity_merchant_order_detail_textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" phút (12:10) "
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_merchant_order_detail_textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/activity_merchant_order_detail_textView15"
        app:layout_constraintTop_toTopOf="@+id/activity_merchant_order_detail_textView15"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/activity_merchant_order_detail_tv_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/be_vietnam_bold"
        android:text="Lần đầu đặt"
        android:textColor="#BBBBBB"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_merchant_order_detail_tv_customer_name" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/activity_merchant_order_detail_appCompatImageButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="30dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/telephone"
        app:layout_constraintEnd_toStartOf="@+id/activity_merchant_order_detail_appCompatImageButton2"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/activity_merchant_order_detail_appCompatImageButton2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="30dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/print"
        app:layout_constraintEnd_toStartOf="@+id/activity_merchant_order_detail_appCompatImageButton3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/activity_merchant_order_detail_appCompatImageButton3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/bubble_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

