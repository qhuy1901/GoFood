<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".merchant.order_detail.MerchantOrderDetailActivity">

    <RelativeLayout
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/activity_merchant_order_detail_iv_btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_button" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/activity_merchant_order_detail_iv_btn_back"
            android:text="Chi tiết đơn hàng"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_merchant_order_detail_tv_customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/be_vietnam_bold"
        android:text="Khách hàng A"
        android:textColor="#000000"
        android:layout_marginStart="16dp"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <View
        android:id="@+id/activity_merchant_order_detail_view"
        android:layout_width="fill_parent"
        android:layout_height="0.7dp"
        android:layout_margin="15dp"
        android:background="#c0c0c0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_merchant_order_detail_tv_order_id" />

    <TextView
        android:id="@+id/activity_merchant_order_detail_textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Lấy đơn trong "
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_merchant_order_detail_tv_order_id" />

    <TextView
        android:id="@+id/activity_merchant_order_detail_textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/be_vietnam_bold"
        android:text=" 29 "
        android:textColor="#F2789F"
        android:textSize="20dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/activity_merchant_order_detail_textView14"
        app:layout_constraintStart_toEndOf="@+id/activity_merchant_order_detail_textView14"
        app:layout_constraintTop_toTopOf="@+id/activity_merchant_order_detail_textView14"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/activity_merchant_order_detail_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/be_vietnam_medium"
        android:text="Cách 2.7km"
        android:textColor="#BBBBBB"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textStyle="italic"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_merchant_order_detail_textView14" />

    <View
        android:id="@+id/activity_merchant_order_detail_view1"
        android:layout_width="fill_parent"
        android:layout_height="0.6dp"
        android:layout_margin="15dp"
        android:background="#c0c0c0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_merchant_order_detail_textView2" />

