<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@color/white"
    tools:context="">

    <TextView
        android:id="@+id/txt_orders_item_maDonHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/be_vietnam_medium"
        android:text="#284-23978"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_orders_item_NgayDatHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/be_vietnam_medium"
        android:text="15/04/2022"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_orders_item_maDonHang" />

    <ImageView
        android:id="@+id/img_orders_item_HinhShop"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/txt_orders_item_maDonHang"
        app:layout_constraintTop_toBottomOf="@+id/txt_orders_item_maDonHang"
        app:srcCompat="@drawable/default_store" />

    <TextView
        android:id="@+id/txt_orders_item_ten_shop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/be_vietnam_bold"
        android:text="Tiệm bánh Yum Sài Gòn"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_orders_item_HinhShop"
        app:layout_constraintTop_toTopOf="@+id/img_orders_item_HinhShop" />

    <TextView
        android:id="@+id/txt_orders_item_DiaChiShop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/be_vietnam_medium"
        android:text="11 Nguyễn Văn Cừ, Phường 12, Quận 5, TP Hồ Chí Minh"
        android:textColor="@color/gray"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_orders_item_ten_shop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_orders_item_ten_shop"
        app:layout_constraintTop_toBottomOf="@+id/txt_orders_item_ten_shop" />

    <TextView
        android:id="@+id/txt_orders_item_Tien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/be_vietnam_bold"
        android:text="52,300đ"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/txt_orders_item_DiaChiShop"
        app:layout_constraintTop_toBottomOf="@+id/txt_orders_item_DiaChiShop" />

    <TextView
        android:id="@+id/txt_orders_item_so_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/be_vietnam_medium"
        android:text="(1 sản phẩm)"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_orders_item_Tien"
        app:layout_constraintStart_toEndOf="@+id/txt_orders_item_Tien" />

    <TextView
        android:id="@+id/txt_orders_item_tinh_trang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/be_vietnam_medium"
        android:text="Đã hoàn thành"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/img_orders_item_HinhShop"
        app:layout_constraintTop_toBottomOf="@+id/txt_orders_item_Tien" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_orders_item_mua_lai"
        android:layout_width="68dp"
        android:layout_height="36dp"
        android:background="@drawable/btn2_bg"
        android:fontFamily="@font/be_vietnam_bold"
        android:text="Mua lại"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_orders_item_DiaChiShop"
        app:layout_constraintTop_toTopOf="@+id/txt_orders_item_tinh_trang" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_orders_item_xem_danh_gia"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn1_bg"
        android:fontFamily="@font/be_vietnam_bold"
        android:text="Xem đánh giá"
        android:textAllCaps="false"
        android:textColor="@color/color_primary"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_orders_item_mua_lai"
        app:layout_constraintEnd_toStartOf="@+id/btn_orders_item_mua_lai" />
</androidx.constraintlayout.widget.ConstraintLayout>