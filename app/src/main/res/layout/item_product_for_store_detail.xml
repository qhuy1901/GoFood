<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_product_for_store_detail_cl_product_item"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_product_for_store_detail_iv_product_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_them_anh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_product_for_store_detail_tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:text="Tên món"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_product_for_store_detail_iv_product_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Đã bán 0, Thích 0, Không thích 0"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/item_product_for_store_detail_iv_product_image"
        app:layout_constraintTop_toBottomOf="@+id/item_product_for_store_detail_tv_product_name" />

    <TextView
        android:id="@+id/item_product_for_store_detail_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="30.000đ"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/red"
        app:layout_constraintStart_toEndOf="@+id/item_product_for_store_detail_iv_product_image"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="+"
android:id="@+id/item_product_for_store_detail_btn_add_to_cart"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>