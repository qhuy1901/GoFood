<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/item_topping_for_topping_bottom_dialog_tv_topping_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/item_topping_for_topping_bottom_dialog_ckb_is_include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_topping_for_topping_bottom_dialog_tv_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="6.000 đ"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/item_topping_for_topping_bottom_dialog_ckb_is_include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_topping_for_topping_bottom_dialog_tv_topping_name" />

    <CheckBox
        android:id="@+id/item_topping_for_topping_bottom_dialog_ckb_is_include"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>