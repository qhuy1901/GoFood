<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-10dp">

    <ImageView
        android:id="@+id/img_background_logo"
        android:layout_width="173dp"
        android:layout_height="164dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_background_logo"
        app:layout_constraintEnd_toEndOf="@+id/img_background_logo"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/img_background_logo"
        app:layout_constraintTop_toTopOf="@+id/img_background_logo"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/be_vietnam_bold"
        android:lineSpacingExtra="8sp"
        android:text="Xin chào\nThúy Nga"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_background_logo" />

    <TextView
        android:id="@+id/txt_login_as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/be_vietnam_bold"
        android:text="Đăng nhập với tư cách"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_welcome" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_customer_role"
        android:layout_width="320dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/welcome_bg_btn_role"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/be_vietnam_bold"
        android:text="Khách hàng"
        android:textColor="@color/color_primary"
        android:drawableStart="@drawable/welcomepage_customer_icon"
        android:paddingStart="60dp"
        android:paddingEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_login_as" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_merchant_role"
        android:layout_width="320dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/welcome_bg_btn_role"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/be_vietnam_bold"
        android:text="Chủ quán"
        android:textColor="@color/color_primary"
        android:drawableStart="@drawable/welcomepage_merchant_icon"
        android:paddingStart="60dp"
        android:paddingEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_customer_role" />

</androidx.constraintlayout.widget.ConstraintLayout>
